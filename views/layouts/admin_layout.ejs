<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Event Management - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Sports Amigo Admin</h3>
            </div>

            <ul class="list-unstyled components">
                <li class="<%= path === '/admin' ? 'active' : '' %>">
                    <a href="/admin"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
                </li>
                
                <!-- User Management Dropdown -->
                <li>
                    <a href="#userManagementSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="bi bi-people me-2"></i>User Management
                    </a>
                    <ul class="collapse list-unstyled <%= ['/admin/organizers', '/admin/team-managers', '/admin/players', '/admin/activity-logs'].includes(path) ? 'show' : '' %>" id="userManagementSubmenu">
                        <li class="<%= path === '/admin/organizers' ? 'active' : '' %>">
                            <a href="/admin/organizers"><i class="bi bi-person-badge me-2"></i>Organizers</a>
                        </li>
                        <li class="<%= path === '/admin/team-managers' ? 'active' : '' %>">
                            <a href="/admin/team-managers"><i class="bi bi-person-video3 me-2"></i>Team Managers</a>
                        </li>
                        <li class="<%= path === '/admin/players' ? 'active' : '' %>">
                            <a href="/admin/players"><i class="bi bi-person me-2"></i>Players</a>
                        </li>
                        <li class="<%= path === '/admin/activity-logs' ? 'active' : '' %>">
                            <a href="/admin/activity-logs"><i class="bi bi-journal-text me-2"></i>Activity Logs</a>
                        </li>
                    </ul>
                </li>
                
                <!-- Events Dropdown -->
                <li>
                    <a href="#eventsSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="bi bi-calendar-event me-2"></i>Events
                    </a>
                    <ul class="collapse list-unstyled <%= ['/admin/tournaments', '/admin/matches'].includes(path) ? 'show' : '' %>" id="eventsSubmenu">
                        <li class="<%= path === '/admin/tournaments' ? 'active' : '' %>">
                            <a href="/admin/tournaments"><i class="bi bi-trophy me-2"></i>Tournaments</a>
                        </li>
                        <li class="<%= path === '/admin/matches' ? 'active' : '' %>">
                            <a href="/admin/matches"><i class="bi bi-controller me-2"></i>Matches</a>
                        </li>
                    </ul>
                </li>
                
                <!-- Team Management Dropdown -->
                <li>
                    <a href="#teamManagementSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="bi bi-people-fill me-2"></i>Team Management
                    </a>
                    <ul class="collapse list-unstyled <%= ['/admin/teams', '/admin/player-assignments', '/admin/team-assignments'].includes(path) ? 'show' : '' %>" id="teamManagementSubmenu">
                        <li class="<%= path === '/admin/teams' ? 'active' : '' %>">
                            <a href="/admin/teams"><i class="bi bi-flag me-2"></i>Teams</a>
                        </li>
                        <li class="<%= path === '/admin/player-assignments' ? 'active' : '' %>">
                            <a href="/admin/player-assignments"><i class="bi bi-person-check me-2"></i>Player Assignments</a>
                        </li>
                        <li class="<%= path === '/admin/team-assignments' ? 'active' : '' %>">
                            <a href="/admin/team-assignments"><i class="bi bi-clipboard-check me-2"></i>Team Assignments</a>
                        </li>
                    </ul>
                </li>
                
                <!-- Financial Management Dropdown -->
                <li>
                    <a href="#financialSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="bi bi-cash-coin me-2"></i>Financial Management
                    </a>
                    <ul class="collapse list-unstyled <%= ['/admin/player-finance', '/admin/team-finance', '/admin/finance-analytics'].includes(path) ? 'show' : '' %>" id="financialSubmenu">
                        <li class="<%= path === '/admin/player-finance' ? 'active' : '' %>">
                            <a href="/admin/player-finance"><i class="bi bi-person-badge me-2"></i>Player Registrations</a>
                        </li>
                        <li class="<%= path === '/admin/team-finance' ? 'active' : '' %>">
                            <a href="/admin/team-finance"><i class="bi bi-people me-2"></i>Team Registrations</a>
                        </li>
                        <li class="<%= path === '/admin/finance-analytics' ? 'active' : '' %>">
                            <a href="/admin/finance-analytics"><i class="bi bi-graph-up me-2"></i>Financial Analytics</a>
                        </li>
                    </ul>
                </li>
                
                <li class="<%= path === '/admin/profile' ? 'active' : '' %>">
                    <a href="/admin/profile"><i class="bi bi-person-circle me-2"></i>Profile</a>
                </li>
                <li>
                    <a href="/admin/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-dark">
                        <i class="bi bi-list"></i>
                    </button>
                    <span class="navbar-brand ms-3">Sports League Administration</span>
                    <div class="d-flex align-items-center">
                        <% if (user && user.email) { %>
                            <span class="text-light me-3">Welcome, <%= user.email %></span>
                            <a href="/admin/logout" class="btn btn-outline-light btn-sm">Logout</a>
                        <% } else { %>
                            <a href="/admin/login" class="btn btn-outline-light btn-sm">Login</a>
                        <% } %>
                    </div>
                </div>
            </nav>

            <div class="container-fluid py-4">
                <%- body %>
            </div>

            <footer class="mt-auto py-3 bg-light text-center">
                <div class="container">
                    <p>&copy; 2025 Sports Event Management System - Admin Portal</p>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarCollapse = document.getElementById('sidebarCollapse');
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');
            
            // Force sidebar to be expanded
            sidebar.classList.remove('active');
            content.classList.remove('active');
            localStorage.setItem('adminSidebarState', 'expanded');
            
            sidebarCollapse.addEventListener('click', function() {
                sidebar.classList.toggle('active');
                content.classList.toggle('active');
                
                // Save state to localStorage
                if (sidebar.classList.contains('active')) {
                    localStorage.setItem('adminSidebarState', 'inactive');
                } else {
                    localStorage.setItem('adminSidebarState', 'expanded');
                }
            });
        });
    </script>
</body>
</html> 