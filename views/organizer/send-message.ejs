<%- include('../partials/header', { title: 'Send Message - Sports Amigo' }) %>

<%- include('../partials/navbar', { user: user }) %>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Message Participants: <%= event.name %></h3>
            </div>
            <div class="card-body">
                <!-- Action Buttons -->
                <div class="mb-4">
                    <a href="/organizer/event/<%= event.id %>" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to Event Details
                    </a>
                </div>
                
                <div class="row">
                    <div class="col-md-8 mx-auto">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Compose Message</h5>
                            </div>
                            <div class="card-body">
                                <form action="/organizer/event/<%= event.id %>/send-message" method="POST" data-validate>
                                    <div class="mb-3">
                                        <label for="recipients" class="form-label">Send To</label>
                                        <select class="form-select" id="recipients" name="recipients">
                                            <option value="all" selected>All Participants</option>
                                            <option value="team_managers">Team Managers Only</option>
                                            <option value="players">Players Only</option>
                                        </select>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="subject" class="form-label">Subject</label>
                                        <input type="text" class="form-control" id="subject" name="subject" required>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="message" class="form-label">Message</label>
                                        <textarea class="form-control" id="message" name="message" rows="6" required></textarea>
                                    </div>
                                    
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="sendEmail" name="sendEmail" checked>
                                        <label class="form-check-label" for="sendEmail">
                                            Send via Email
                                        </label>
                                    </div>
                                    
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="sendSMS" name="sendSMS">
                                        <label class="form-check-label" for="sendSMS">
                                            Send via SMS (if phone numbers available)
                                        </label>
                                    </div>
                                    
                                    <div class="text-end">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-paper-plane me-2"></i>Send Message
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 