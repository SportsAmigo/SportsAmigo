<!-- Manager My Teams Page -->
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-0"><i class="fas fa-users me-2"></i> My Teams</h2>
                            <p class="lead mt-2 mb-0">
                                Manage your sports teams and their members
                            </p>
                        </div>
                        <a href="/manager/create-team" class="btn btn-light btn-lg">
                            <i class="fas fa-plus-circle me-2"></i> Create Team
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Error/Success Messages -->
    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert">
        <%= messages.error %>
    </div>
    <% } %>
    
    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert">
        <%= messages.success %>
    </div>
    <% } %>

    <!-- Teams Section -->
    <div class="row">
        <% if (teams && teams.length > 0) { %>
            <% teams.forEach(team => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-<%= team.sport_type === 'Basketball' ? 'primary' : team.sport_type === 'Football' ? 'success' : team.sport_type === 'Cricket' ? 'warning' : 'info' %> text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><%= team.name %></h5>
                            <span class="badge bg-light text-dark">
                                <i class="bi bi-people"></i> <%= team.members && Array.isArray(team.members) ? team.members.length : team.current_members || 0 %> Members
                            </span>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p><%= team.description || 'No description available' %></p>
                            
                            <div class="mb-3">
                                <strong>Members:</strong> 
                                <% 
                                    // Calculate percentage for progress bar
                                    var percentage = Math.min(100, (team.member_count / team.max_members) * 100);
                                %>
                                <div class="progress mt-2" style="height: 25px;">
                                    <div class="progress-bar" role="progressbar" 
                                        data-width="<%= percentage %>"
                                        aria-valuenow="<%= team.member_count %>" 
                                        aria-valuemin="0" 
                                        aria-valuemax="<%= team.max_members %>">
                                        <%= team.member_count %> / <%= team.max_members %> Players
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <strong>Created:</strong> <%= new Date(team.created_at).toLocaleDateString() %>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-grid">
                                <a href="/manager/team/<%= team._id %>/manage" class="btn btn-primary">
                                    <i class="fas fa-users me-1"></i> Manage Team
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info text-center" role="alert">
                    <i class="fas fa-info-circle me-2"></i> You don't have any teams yet. 
                    <a href="/manager/create-team" class="alert-link">Create your first team</a> to get started!
                </div>
            </div>
        <% } %>
    </div>

    <!-- Create Team Info Card -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-info-circle me-2"></i> Team Management</h5>
                    <p>
                        As a manager, you can create and manage multiple teams. For each team you can:
                    </p>
                    <ul>
                        <li>Invite players to join your team</li>
                        <li>Review and approve join requests</li>
                        <li>Register your team for sporting events</li>
                        <li>Track team performance and statistics</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> 

</div>