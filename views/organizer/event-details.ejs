<%- include('../partials/header', { title: 'Event Details - Sports Amigo' }) %>

<%- include('../partials/navbar', { user: user }) %>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Event Details: <%= event.name %></h3>
            </div>
            <div class="card-body">
                <!-- Display Messages -->
                <% if (locals.message) { %>
                    <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
                        <%= message.text %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                
                <!-- Action Buttons -->
                <div class="mb-4">
                    <a href="/organizer/manage-events" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to Events
                    </a>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelEventModal">
                        <i class="fas fa-ban me-2"></i>Cancel Event
                    </button>
                </div>
                
                <div class="row">
                    <!-- Event Information -->
                    <div class="col-md-12">
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Event Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <p class="mb-1 text-muted">Event Name</p>
                                        <p class="fw-bold"><%= event.name %></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-1 text-muted">Sport</p>
                                        <p class="fw-bold"><%= event.sport %></p>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <p class="mb-1 text-muted">Date</p>
                                        <p class="fw-bold"><%= event.date %></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-1 text-muted">Location</p>
                                        <p class="fw-bold"><%= event.location %></p>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <p class="mb-1 text-muted">Registration Deadline</p>
                                        <p class="fw-bold"><%= event.registration_deadline %></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-1 text-muted">Status</p>
                                        <p class="fw-bold">
                                            <span class="badge bg-<%= event.status === 'Open' ? 'success' : (event.status === 'Full' ? 'warning' : 'danger') %>">
                                                <%= event.status %>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <p class="mb-1 text-muted">Description</p>
                                        <p><%= event.description %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Registered Teams -->
                        <div class="card border shadow-sm mt-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Registered Teams</h5>
                            </div>
                            <div class="card-body">
                                <% if (event.registeredTeams && event.registeredTeams.length > 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Team Name</th>
                                                    <th>Manager</th>
                                                    <th>Sport</th>
                                                    <th>Status</th>
                                                    <th>Registration Date</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% event.registeredTeams.forEach(team => { %>
                                                    <tr>
                                                        <td><%= team.name %></td>
                                                        <td><%= team.manager %></td>
                                                        <td><%= team.sport %></td>
                                                        <td>
                                                            <span class="badge bg-<%= team.status === 'confirmed' ? 'success' : 
                                                                                    team.status === 'pending' ? 'warning' : 
                                                                                    team.status === 'cancelled' ? 'danger' : 'secondary' %>">
                                                                <%= team.status.charAt(0).toUpperCase() + team.status.slice(1) %>
                                                            </span>
                                                        </td>
                                                        <td><%= new Date(team.registration_date).toLocaleDateString() %></td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                                    Actions
                                                                </button>
                                                                <ul class="dropdown-menu">
                                                                    <li><a class="dropdown-item" href="#" onclick="updateStatus('<%= team.id %>', 'confirmed')">Confirm</a></li>
                                                                    <li><a class="dropdown-item" href="#" onclick="updateStatus('<%= team.id %>', 'cancelled')">Cancel</a></li>
                                                                    <li><hr class="dropdown-divider"></li>
                                                                    <li><a class="dropdown-item" href="#" onclick="viewTeamDetails('<%= team.id %>')">View Team</a></li>
                                                                </ul>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle"></i> No teams have registered for this event yet.
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Event Modal -->
<div class="modal fade" id="cancelEventModal" tabindex="-1" aria-labelledby="cancelEventModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelEventModalLabel">Confirm Event Cancellation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel the event "<%= event.name %>"?</p>
                <p class="text-danger"><i class="fas fa-exclamation-triangle me-2"></i>This will notify all registered teams that the event has been cancelled.</p>
                <div class="mb-3">
                    <label for="cancellationReason" class="form-label">Cancellation Reason (optional)</label>
                    <textarea class="form-control" id="cancellationReason" rows="3" placeholder="Provide a reason for cancellation to share with participants"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, Keep Event</button>
                <form action="/organizer/event/<%= event.id %>/cancel" method="POST">
                    <input type="hidden" name="reason" id="cancellationReasonInput">
                    <button type="submit" class="btn btn-danger">Yes, Cancel Event</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Status Update Form - Hidden form used by JavaScript -->
<form id="statusUpdateForm" method="POST" action="/organizer/event/<%= event.id %>/update-registration" style="display: none;">
    <input type="hidden" id="teamId" name="teamId" value="">
    <input type="hidden" id="status" name="status" value="">
</form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize remove team modal
        const removeTeamModal = document.getElementById('removeTeamModal');
        if (removeTeamModal) {
            removeTeamModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const teamId = button.getAttribute('data-team-id');
                const teamName = button.getAttribute('data-team-name');
                
                document.getElementById('teamNameToRemove').textContent = teamName;
                document.getElementById('teamIdToRemove').value = teamId;
                
                // Update the form action to include the team ID
                const form = document.getElementById('removeTeamForm');
                form.action = `/organizer/event/<%= event.id %>/remove-team/${teamId}`;
            });
        }
        
        // Transfer cancellation reason to hidden input on form submission
        const cancelEventModal = document.getElementById('cancelEventModal');
        if (cancelEventModal) {
            const form = cancelEventModal.querySelector('form');
            form.addEventListener('submit', function() {
                const reason = document.getElementById('cancellationReason').value;
                document.getElementById('cancellationReasonInput').value = reason;
            });
        }
        
        // Transfer removal reason to hidden input on form submission
        const removeTeamForm = document.getElementById('removeTeamForm');
        if (removeTeamForm) {
            removeTeamForm.addEventListener('submit', function() {
                const reason = document.getElementById('removalReason').value;
                document.getElementById('removalReasonInput').value = reason;
            });
        }
    });

    // Update registration status
    function updateStatus(teamId, status) {
        if (confirm(`Are you sure you want to ${status} this team's registration?`)) {
            document.getElementById('teamId').value = teamId;
            document.getElementById('status').value = status;
            document.getElementById('statusUpdateForm').submit();
        }
    }
    
    // View team details
    function viewTeamDetails(teamId) {
        // In a real app, this would navigate to the team details page
        alert('This would navigate to team details page. Feature coming soon!');
    }
</script>

