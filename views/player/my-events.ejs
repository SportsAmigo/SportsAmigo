<div class="row mb-4">
    <div class="col">
        <div class="card">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0">My Events</h3>
                <div>
                    <a href="/player/browse-events" class="btn btn-light">Browse Events</a>
                </div>
            </div>
            <div class="card-body">
                <p class="lead mb-4">Here are the events you have joined through your teams:</p>
                
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    <% if (events && events.length > 0) { %>
                        <% events.forEach(event => { %>
                        <div class="col">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h4 class="card-title mb-0"><%= event.name %></h4>
                                        <span class="badge bg-primary"><%= event.sport %></span>
                                    </div>
                                    <p class="text-muted mb-2"><i class="bi bi-calendar-event me-1"></i> <%= new Date(event.event_date).toLocaleDateString() %></p>
                                    <p class="text-muted mb-2"><i class="bi bi-geo-alt me-1"></i> <%= event.location %></p>
                                    <p class="text-muted mb-3">
                                        <i class="bi bi-people me-1"></i> Team: 
                                        <strong class="text-success"><%= event.team_name || 'Unknown Team' %></strong>
                                    </p>
                                    <p class="text-muted mb-3">
                                        <i class="bi bi-person me-1"></i> Organizer: 
                                        <%= event.organizer_name || 'N/A' %>
                                    </p>
                                    
                                    <div class="d-flex justify-content-between">
                                        <a href="/player/event/<%= event.id %>" class="btn btn-sm btn-primary">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12 text-center">
                            <div class="alert alert-info">
                                <p class="mb-0">
                                    <i class="bi bi-info-circle me-2"></i> 
                                    You haven't joined any events through your teams yet.
                                </p>
                                <p class="mt-3 mb-0">
                                    <a href="/player/browse-teams" class="btn btn-sm btn-outline-primary me-2">Join a Team</a>
                                    <a href="/player/browse-events" class="btn btn-sm btn-outline-success">Browse Events</a>
                                </p>
                            </div>
                        </div>
                    <% } %>
                </div>
                
                <h4 class="mt-5 mb-3">My Event Statistics</h4>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="mb-0">Event Overview</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Event</th>
                                                <th>Date</th>
                                                <th>Location</th>
                                                <th>Team</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (events && events.length > 0) { %>
                                                <% events.forEach(event => { %>
                                                    <tr>
                                                        <td><%= event.name %></td>
                                                        <td><%= new Date(event.event_date).toLocaleDateString() %></td>
                                                        <td><%= event.location %></td>
                                                        <td><strong><%= event.team_name || 'N/A' %></strong></td>
                                                        <td><span class="badge bg-<%= event.status === 'upcoming' ? 'success' : 'secondary' %>"><%= event.status %></span></td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="5" class="text-center">No event statistics available</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 