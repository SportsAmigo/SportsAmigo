<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Arena - <%= typeof title !== 'undefined' ? title : 'Dashboard' %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa;
        }
        
        .sidebar {
            background-color: #343a40;
            color: #fff;
            min-height: 100vh;
            position: fixed;
            width: 250px;
            transition: all 0.3s;
            z-index: 1000;
        }
        
        .sidebar-header {
            padding: 20px 15px;
            background: #212529;
        }
        
        .sidebar-logo {
            max-width: 100%;
            height: auto;
        }
        
        .sidebar ul li a {
            padding: 15px;
            display: block;
            color: #adb5bd;
            text-decoration: none;
            transition: all 0.3s;
        }
        
        .sidebar ul li a:hover,
        .sidebar ul li a.active {
            color: #fff;
            background: #495057;
        }
        
        .sidebar ul li a i {
            margin-right: 10px;
        }
        
        .main-content {
            margin-left: 250px;
            padding: 20px;
            flex: 1;
            transition: all 0.3s;
        }
        
        .top-bar {
            background: #fff;
            border-bottom: 1px solid #e9ecef;
            padding: 15px 20px;
            margin-bottom: 20px;
            border-radius: 5px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        
        /* Sidebar Dropdown styles */
        .sidebar a[data-bs-toggle="collapse"] {
            position: relative;
        }
        
        .sidebar a[data-bs-toggle="collapse"]::after {
            content: "\f107";
            font-family: "Font Awesome 5 Free";
            font-weight: 900;
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            transition: transform 0.3s;
        }
        
        .sidebar a[aria-expanded="true"]::after {
            transform: translateY(-50%) rotate(-180deg);
        }
        
        .sidebar ul.collapse {
            margin-left: 20px;
        }
        
        .sidebar ul.collapse li a {
            padding: 10px 15px 10px 35px;
            font-size: 0.95em;
            color: #adb5bd;
        }
        
        .sidebar ul.collapse li a:hover,
        .sidebar ul.collapse li a.active {
            color: #fff;
            background: #495057;
        }
        
        .sidebar ul li {
            margin-bottom: 2px;
        }
        
        .profile-dropdown-toggle {
            display: flex;
            align-items: center;
            height: 38px;
            padding: 4px 12px;
            width: auto;
            min-width: 180px;
            transition: none;
        }
        
        .profile-img-container {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            overflow: hidden;
            margin-right: 8px;
            flex-shrink: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f1f1f1;
        }
        
        .profile-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .profile-name {
            max-width: 120px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        @media (max-width: 768px) {
            .sidebar {
                width: 80px;
            }
            
            .sidebar ul li a span,
            .sidebar-header h3 {
                display: none;
            }
            
            .sidebar ul li a i {
                margin-right: 0;
                font-size: 1.5rem;
            }
            
            .main-content {
                margin-left: 80px;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <h3 class="text-center"><img src="/images/logooo-removebg-preview.png" alt="Sports Amigo Logo"></h3>
        </div>
        
        <ul class="list-unstyled">
            <% if (user.role === 'player') { %>
                <li>
                    <a href="/player" class="<%= path === '/player' ? 'active' : '' %>">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="/player/browse-events" class="<%= path === '/player/browse-events' ? 'active' : '' %>">
                        <i class="fas fa-search"></i>
                        <span>Browse Events</span>
                    </a>
                </li>
                <li>
                    <a href="/player/browse-teams" class="<%= path === '/player/browse-teams' ? 'active' : '' %>">
                        <i class="fas fa-users-viewfinder"></i>
                        <span>Browse Teams</span>
                    </a>
                </li>
                <li>
                    <a href="/player/my-events" class="<%= path === '/player/my-events' ? 'active' : '' %>">
                        <i class="fas fa-calendar-alt"></i>
                        <span>My Events</span>
                    </a>
                </li>
                <li>
                    <a href="/player/my-teams" class="<%= path === '/player/my-teams' ? 'active' : '' %>">
                        <i class="fas fa-users"></i>
                        <span>My Teams</span>
                    </a>
                </li>
                <li>
                    <a href="/player/profile" class="<%= path === '/player/profile' ? 'active' : '' %>">
                        <i class="fas fa-user"></i>
                        <span>Profile</span>
                    </a>
                </li>
            <% } else if (user.role === 'manager') { %>
                <li>
                    <a href="/manager" class="<%= path === '/manager' ? 'active' : '' %>">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="/manager/my-events" class="<%= path === '/manager/my-events' ? 'active' : '' %>">
                        <i class="fas fa-calendar-alt"></i>
                        <span>My Events</span>
                    </a>
                </li>
                <li>
                    <a href="/manager/browse-events" class="<%= path === '/manager/browse-events' ? 'active' : '' %>">
                        <i class="fas fa-search"></i>
                        <span>Browse Events</span>
                    </a>
                </li>
                <li>
                    <a href="/manager/my-teams" class="<%= path === '/manager/my-teams' ? 'active' : '' %>">
                        <i class="fas fa-users"></i>
                        <span>My Teams</span>
                    </a>
                </li>
                <li>
                    <a href="/manager/join-requests" class="<%= path === '/manager/join-requests' ? 'active' : '' %>">
                        <i class="fas fa-user-plus"></i>
                        <span>Join Requests</span>
                    </a>
                </li>
                <li>
                    <a href="/manager/player-performance" class="<%= path === '/manager/player-performance' ? 'active' : '' %>">
                        <i class="fas fa-chart-line"></i>
                        <span>Performance</span>
                    </a>
                </li>
                <li>
                    <a href="/manager/profile" class="<%= path === '/manager/profile' ? 'active' : '' %>">
                        <i class="fas fa-user"></i>
                        <span>Profile</span>
                    </a>
                </li>
            <% } else if (user.role === 'organizer') { %>
                <li>
                    <a href="/organizer" class="<%= path === '/organizer' ? 'active' : '' %>">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="/organizer/create-event" class="<%= path === '/organizer/create-event' ? 'active' : '' %>">
                        <i class="fas fa-plus-circle"></i>
                        <span>Create Event</span>
                    </a>
                </li>
                <li>
                    <a href="/organizer/manage-events" class="<%= path === '/organizer/manage-events' ? 'active' : '' %>">
                        <i class="fas fa-tasks"></i>
                        <span>Manage Events</span>
                    </a>
                </li>
                <li>
                    <a href="/organizer/reports" class="<%= path === '/organizer/reports' ? 'active' : '' %>">
                        <i class="fas fa-chart-bar"></i>
                        <span>Reports & Analytics</span>
                    </a>
                </li>
                <li>
                    <a href="/organizer/profile" class="<%= path === '/organizer/profile' ? 'active' : '' %>">
                        <i class="fas fa-user"></i>
                        <span>Profile</span>
                    </a>
                </li>
            <% } else if (user.role === 'admin') { %>
                <li>
                    <a href="/admin/dashboard" class="<%= path === '/admin' || path === '/admin/dashboard' ? 'active' : '' %>">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                
                <!-- User Management Dropdown -->
                <li>
                    <a href="#userSubmenu" data-bs-toggle="collapse" aria-expanded="<%= ['/admin/organizers', '/admin/managers', '/admin/players'].includes(path) ? 'true' : 'false' %>" class="dropdown-toggle">
                        <i class="fas fa-users"></i>
                        <span>User Management</span>
                    </a>
                    <ul class="collapse list-unstyled <%= ['/admin/organizers', '/admin/managers', '/admin/players'].includes(path) ? 'show' : '' %>" id="userSubmenu">
                        <li class="<%= path === '/admin/organizers' ? 'active' : '' %>">
                            <a href="/admin/organizers">
                                <i class="fas fa-user-tie"></i>
                                <span>Organizers</span>
                            </a>
                        </li>
                        <li class="<%= path === '/admin/managers' ? 'active' : '' %>">
                            <a href="/admin/managers">
                                <i class="fas fa-user-cog"></i>
                                <span>Managers</span>
                            </a>
                        </li>
                        <li class="<%= path === '/admin/players' ? 'active' : '' %>">
                            <a href="/admin/players">
                                <i class="fas fa-running"></i>
                                <span>Players</span>
                            </a>
                        </li>
                    </ul>
                </li>
                
                <!-- Teams -->
                <li>
                    <a href="/admin/teams" class="<%= path === '/admin/teams' ? 'active' : '' %>">
                        <i class="fas fa-people-group"></i>
                        <span>Teams</span>
                    </a>
                </li>
                
                <!-- Events -->
                <li>
                    <a href="/admin/tournaments" class="<%= path === '/admin/tournaments' ? 'active' : '' %>">
                        <i class="fas fa-trophy"></i>
                        <span>Events</span>
                    </a>
                </li>
                
                <!-- System Information -->
                <li>
                    <a href="/admin/stats" class="<%= path === '/admin/stats' ? 'active' : '' %>">
                        <i class="fas fa-chart-line"></i>
                        <span>System Statistics</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/activity-logs" class="<%= path === '/admin/activity-logs' ? 'active' : '' %>">
                        <i class="fas fa-clipboard-list"></i>
                        <span>Activity Logs</span>
                    </a>
                </li>
            <% } %>
            <li>
                <a href="/logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </nav>
    
    <!-- Main Content -->
    <div class="main-content">
        <div class="top-bar d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0"><%= typeof title !== 'undefined' ? title : 'Dashboard' %></h4>
            </div>
            
            <div class="dropdown">
                <a class="btn btn-light dropdown-toggle profile-dropdown-toggle" href="#" role="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <% 
                    let profileImagePath = '/images/default-avatar.png';
                    if (user.profile_image) {
                        // Check if profile_image already has a leading slash
                        profileImagePath = user.profile_image.startsWith('/') ? user.profile_image : '/' + user.profile_image;
                    } else if (user.photoUrl) {
                        // Check if photoUrl already has a leading slash
                        profileImagePath = user.photoUrl.startsWith('/') ? user.photoUrl : '/' + user.photoUrl;
                    }
                    %>
                    <div class="profile-img-container">
                        <img src="<%= profileImagePath %>" alt="Profile" onerror="this.onerror=null; this.src='/images/default-avatar.png';">
                    </div>
                    <span class="profile-name"><%= user.name || (user.first_name + ' ' + (user.last_name || '')) || user.email %></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                    <li><a class="dropdown-item" href="/<%= user.role %>/profile">Profile</a></li>
                    <li><a class="dropdown-item" href="/settings">Settings</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
        
        <!-- Alert Messages -->
        <% if (typeof req !== 'undefined' && req.session) { %>
            <% if (req.session.success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= req.session.success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% req.session.success = null; %>
            <% } %>
            
            <% if (req.session.error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= req.session.error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% req.session.error = null; %>
            <% } %>
        <% } %>
        
        <%- body %>
    </div>
    
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Initialize Bootstrap components -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize all popovers
            var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
            var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
              return new bootstrap.Popover(popoverTriggerEl);
            });
            
            // Initialize all tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
              return new bootstrap.Tooltip(tooltipTriggerEl);
            });
            
            // Initialize all dropdowns
            var dropdownTriggerList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
            var dropdownList = dropdownTriggerList.map(function (dropdownTriggerEl) {
              return new bootstrap.Dropdown(dropdownTriggerEl);
            });
            
            // Handle profile image loading errors
            const profileImg = document.querySelector('.profile-img-container img');
            if (profileImg) {
                profileImg.onerror = function() {
                    this.onerror = null;
                    this.src = '/images/default-avatar.png';
                };
            }
        });
    </script>
</body>
</html> 