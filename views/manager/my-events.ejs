<%- include('../partials/header', {title: 'Manager Dashboard - Sports Amigo', headerType: 'manager'}) %>
<%- include('../partials/navbar', { user: user }) %>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">My Events</h3>
            </div>
            <div class="card-body">
                <!-- Nav tabs for Upcoming and Completed events -->
                <ul class="nav nav-tabs mb-4" id="eventsTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab" aria-controls="upcoming" aria-selected="true">
                            Upcoming Events
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button" role="tab" aria-controls="completed" aria-selected="false">
                            Completed Events
                        </button>
                    </li>
                </ul>
                
                <div class="tab-content" id="eventsTabContent">
                    <div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
                        <% if (locals.upcomingEvents && upcomingEvents.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="bg-light">
                                        <tr>
                                            <th>Event</th>
                                            <th>Date</th>
                                            <th>Location</th>
                                            <th>Team</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% upcomingEvents.forEach(event => { %>
                                            <tr>
                                                <td><strong><%= event.event_name %></strong></td>
                                                <td><%= event.event_date %></td>
                                                <td><%= event.event_location %></td>
                                                <td><%= event.team_name %></td>
                                                <td>
                                                    <span class="badge bg-<%= event.registration_status === 'confirmed' ? 'success' : 'warning' %>">
                                                        <%= event.registration_status.charAt(0).toUpperCase() + event.registration_status.slice(1) %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="/manager/event/<%= event.event_id %>/details" class="btn btn-info">View Details</a>
                                                        <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#withdrawModal<%= event.event_id %>">Withdraw</button>
                                                    </div>
                                                    
                                                    <!-- Withdraw Modal for each event -->
                                                    <div class="modal fade" id="withdrawModal<%= event.event_id %>" tabindex="-1" aria-labelledby="withdrawModalLabel<%= event.event_id %>" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="withdrawModalLabel<%= event.event_id %>">Confirm Withdrawal</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Are you sure you want to withdraw team <strong><%= event.team_name %></strong> from <strong><%= event.event_name %></strong>?</p>
                                                                    <div class="alert alert-warning">
                                                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                                                        This action cannot be undone. You may not be able to re-register if the event becomes fully booked.
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <form action="/manager/event/<%= event.event_id %>/withdraw" method="POST" id="withdrawForm<%= event.event_id %>">
                                                                        <input type="hidden" name="teamId" value="<%= event.team_id %>">
                                                                        <button type="submit" id="withdrawConfirmBtn<%= event.event_id %>" class="btn btn-danger">Confirm Withdrawal</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="alert alert-info">
                                <p>You haven't registered for any upcoming events yet.</p>
                                <a href="/manager/browse-events" class="btn btn-primary mt-2">Browse Events</a>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="tab-pane fade" id="completed" role="tabpanel" aria-labelledby="completed-tab">
                        <% if (locals.pastEvents && pastEvents.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="bg-light">
                                        <tr>
                                            <th>Event</th>
                                            <th>Date</th>
                                            <th>Location</th>
                                            <th>Team</th>
                                            <th>Status</th>
                                            <th>Registration Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% pastEvents.forEach(event => { %>
                                            <tr>
                                                <td><strong><%= event.event_name %></strong></td>
                                                <td><%= event.event_date %></td>
                                                <td><%= event.event_location %></td>
                                                <td><%= event.team_name %></td>
                                                <td>
                                                    <span class="badge bg-<%= event.event_status === 'completed' ? 'success' : 'secondary' %>">
                                                        <%= event.event_status.charAt(0).toUpperCase() + event.event_status.slice(1) %>
                                                    </span>
                                                </td>
                                                <td><%= event.registration_date %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="alert alert-info">
                                <p>You don't have any past events yet.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // 1. Event Details buttons
        document.querySelectorAll('.btn-info').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const eventId = this.getAttribute('href').split('/').pop();
                console.log('Viewing details for event ID:', eventId);
                
                // Show loading state
                this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>';
                this.disabled = true;
                
                // Redirect after short delay
                setTimeout(() => {
                    window.location.href = this.getAttribute('href');
                }, 500);
            });
        });
        
        // 2. Withdraw buttons
        document.querySelectorAll('.btn-danger[data-bs-toggle="modal"]').forEach(btn => {
            btn.addEventListener('click', function() {
                const modalId = this.getAttribute('data-bs-target');
                const eventName = this.closest('tr').querySelector('td:nth-child(2)').textContent;
                console.log('Opening withdraw modal for event:', eventName);
                
                // Set event name in modal if needed
                const modal = document.querySelector(modalId);
                if (modal) {
                    const eventNameSpan = modal.querySelector('.event-name');
                    if (eventNameSpan) {
                        eventNameSpan.textContent = eventName;
                    }
                    
                    // Show modal
                    const bootstrapModal = new bootstrap.Modal(modal);
                    bootstrapModal.show();
                }
            });
        });
        
        // 3. Confirm withdraw in modal - update this section
        document.querySelectorAll('.modal-footer form').forEach(form => {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                const submitBtn = this.querySelector('button[type="submit"]');
                
                // Show loading state
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Withdrawing...';
                submitBtn.disabled = true;
                
                // Submit the form after a brief delay
                setTimeout(() => {
                    this.submit();
                }, 300);
            });
        });
        
        // 4. Tab navigation
        const tabLinks = document.querySelectorAll('.nav-link[data-bs-toggle="pill"]');
        tabLinks.forEach(tab => {
            tab.addEventListener('click', function() {
                const targetId = this.getAttribute('data-bs-target');
                console.log('Switching to tab:', targetId);
                
                // Update active class
                tabLinks.forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                
                // Show target tab content
                document.querySelectorAll('.tab-pane').forEach(pane => {
                    pane.classList.remove('show', 'active');
                });
                document.querySelector(targetId).classList.add('show', 'active');
            });
        });
        
        // 5. Fix modal interaction issues
        document.querySelectorAll('.modal-content').forEach(content => {
            content.addEventListener('click', function(event) {
                event.stopPropagation();
            });
        });
        
        // 6. Cancel button in modal
        document.querySelectorAll('.modal-footer .btn-secondary').forEach(btn => {
            btn.addEventListener('click', function() {
                // Close the modal
                const modal = bootstrap.Modal.getInstance(this.closest('.modal'));
                if (modal) {
                    modal.hide();
                }
            });
        });
        
        console.log('All button handlers in My Events page initialized');
    });
</script> 

<%- include('../partials/footer') %>