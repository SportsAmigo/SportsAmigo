<!-- Admin Dashboard -->
<link rel="stylesheet" href="/css/admin.css">

<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-12 align-self-center">
            <h4 class="text-themecolor">Admin Dashboard</h4>
        </div>
    </div>

    <!-- Statistics Overview Row -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white dashboard-stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total Users</h5>
                        <h2 class="mb-0" data-live-stat="totalPlayers"><%= counts.users || '0' %></h2>
                        <small class="d-block mt-1"><% if (typeof weeklyChanges !== 'undefined' && weeklyChanges.users > 0) { %>+<%= weeklyChanges.users %> this week<% } else { %>Live updating<% } %></small>
                    </div>
                    <div class="card-icon">
                        <i class="bi bi-people fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card bg-success text-white dashboard-stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Active Events</h5>
                        <h2 class="mb-0" data-live-stat="totalEvents"><%= counts.events || '0' %></h2>
                        <small class="d-block mt-1"><% if (typeof weeklyChanges !== 'undefined' && weeklyChanges.events > 0) { %>+<%= weeklyChanges.events %> this week<% } else { %>Live updating<% } %></small>
                    </div>
                    <div class="card-icon">
                        <i class="bi bi-calendar-event fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card bg-info text-white dashboard-stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Active Teams</h5>
                        <h2 class="mb-0" data-live-stat="activeTeams"><%= counts.teams || '0' %></h2>
                        <small class="d-block mt-1"><% if (typeof weeklyChanges !== 'undefined' && weeklyChanges.teams > 0) { %>+<%= weeklyChanges.teams %> this week<% } else { %>Live updating<% } %></small>
                    </div>
                    <div class="card-icon">
                        <i class="bi bi-flag fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Welcome Message -->
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Welcome back, Admin!</h4>
        </div>
    </div>

    <!-- Recent Activity and Upcoming Events Cards Row -->
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Recent User Activities</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <% if (typeof activities !== 'undefined' && activities.length > 0) { %>
                            <% activities.forEach(function(activity) { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong><%= activity.user ? activity.user.name : 'System' %></strong> <%= activity.description %>
                                        <div class="text-muted small"><%= activity.type %> • <%= new Date(activity.timestamp).toLocaleString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true, day: 'numeric', month: 'short' }) %></div>
                                    </div>
                                    <% if (activity.route) { %>
                                        <a href="<%= activity.route %>" class="btn btn-sm btn-outline-primary">View</a>
                                    <% } else { %>
                                        <span class="badge bg-secondary">System</span>
                                    <% } %>
                                </li>
                            <% }); %>
                        <% } else { %>
                            <li class="list-group-item text-center py-4">
                                <i class="bi bi-activity text-muted mb-2" style="font-size: 2rem;"></i>
                                <p class="mb-0">No recent activities found</p>
                            </li>
                        <% } %>
                    </ul>
                    <div class="p-3">
                        <a href="/admin/activity-logs" class="btn btn-outline-primary">View All Activities</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Upcoming Events</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <% if (typeof upcomingEvents !== 'undefined' && upcomingEvents.length > 0) { %>
                            <% upcomingEvents.forEach(function(event) { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong><%= event.title %></strong>
                                        <div class="text-muted small"><%= event.date %> • <%= event.location %></div>
                                        <div class="text-muted small">Teams: <%= event.teams %> • Organizer: <%= event.organizer %></div>
                                    </div>
                                    <span class="badge <%= event.status === 'Active' ? 'bg-success' : 'bg-info' %>"><%= event.status %></span>
                                </li>
                            <% }); %>
                        <% } else { %>
                            <li class="list-group-item text-center py-4">
                                <i class="bi bi-calendar-x text-muted mb-2" style="font-size: 2rem;"></i>
                                <p class="mb-0">No upcoming events found</p>
                            </li>
                        <% } %>
                    </ul>
                    <div class="p-3">
                        <a href="/admin/tournaments" class="btn btn-outline-success">Manage Events</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

