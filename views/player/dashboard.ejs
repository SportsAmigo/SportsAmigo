<div class="row">
    <div class="col-md-12">
        <div class="enhanced-card">
            <div class="enhanced-card-header">
                <h3 class="mb-0">‚öΩ Player Dashboard</h3>
            </div>
            <div class="card-body">
                <!-- Statistics Overview Row -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="dashboard-stat-card bg-primary text-white">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title">Total Events</h5>
                                    <h2 class="mb-0" data-live-stat="totalEvents"><%= events ? events.length : 0 %></h2>
                                    <small class="d-block mt-1">Live updating</small>
                                </div>
                                <div class="card-icon">
                                    <i class="bi bi-calendar-event"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="dashboard-stat-card bg-success text-white">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title">Active Teams</h5>
                                    <h2 class="mb-0" data-live-stat="activeTeams"><%= teams ? teams.length : 0 %></h2>
                                    <small class="d-block mt-1">Live updating</small>
                                </div>
                                <div class="card-icon">
                                    <i class="bi bi-people"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="dashboard-stat-card bg-info text-white">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title">Total Players</h5>
                                    <h2 class="mb-0" data-live-stat="totalPlayers">0</h2>
                                    <small class="d-block mt-1">Live updating</small>
                                </div>
                                <div class="card-icon">
                                    <i class="bi bi-trophy"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- AJAX Event Search Section -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="enhanced-card">
                            <div class="enhanced-card-header">
                                <h5 class="mb-0">üîç Search Events</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-8">
                                        <input type="text" id="event-search-input" class="form-control" 
                                               placeholder="Search events (e.g., football, cricket, tournament...)">
                                    </div>
                                    <div class="col-md-4">
                                        <select id="event-category-filter" class="form-control">
                                            <option value="">All Sports</option>
                                            <option value="football">Football</option>
                                            <option value="cricket">Cricket</option>
                                            <option value="basketball">Basketball</option>
                                            <option value="tennis">Tennis</option>
                                        </select>
                                    </div>
                                </div>
                                <div id="search-results">
                                    <p class="text-muted">Type to search for events...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Welcome Message -->
                <div class="enhanced-card mb-4">
                    <div class="card-body">
                        <h4 class="card-title">üéâ Welcome back, <%= user.first_name || user.email %>!</h4>
                        <% if (events && events.length > 0) { 
                            const nextEvent = events[0]; // First event (should be sorted by date)
                        %>
                            <p class="card-text">Your next event is <strong><%= nextEvent.name %></strong> on <strong><%= new Date(nextEvent.event_date).toLocaleDateString() %></strong>. Make sure to check your team's schedule and be prepared!</p>
                            <a href="/player/event/<%= nextEvent.id %>" class="btn btn-enhanced">View Event Details</a>
                        <% } else { %>
                            <p class="card-text">You don't have any upcoming events. Browse available events or join a team to participate!</p>
                            <a href="/player/browse-events" class="btn btn-enhanced">Browse Events</a>
                            <a href="/player/browse-teams" class="btn btn-enhanced-success ms-2">Join a Team</a>
                        <% } %>
                    </div>
                </div>

                <!-- DHTML Feature: Live Match Countdown Timers -->
                <div class="enhanced-card mb-4">
                    <div class="enhanced-card-header">
                        <h5 class="mb-0">‚è∞ Live Match Countdowns</h5>
                    </div>
                    <div class="card-body">
                        <div id="dashboard-countdown-timers">
                            <div class="loading-shimmer" style="height: 60px; border-radius: 15px;">
                                <p class="text-muted text-center pt-3">Loading countdown timers...</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Access Cards -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">Upcoming Events</h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <% if (events && events.length > 0) { %>
                                        <% events.slice(0, 3).forEach(event => { %>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <%= event.name %>
                                                <div>
                                                    <span class="badge bg-info me-1"><%= event.team_name %></span>
                                                    <span class="badge bg-primary"><%= new Date(event.event_date).toLocaleDateString() %></span>
                                                </div>
                                            </li>
                                        <% }) %>
                                    <% } else { %>
                                        <li class="list-group-item text-center">
                                            No upcoming events
                                        </li>
                                    <% } %>
                                </ul>
                                <div class="mt-3">
                                    <a href="/player/my-events" class="btn btn-outline-primary">See All Events</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">My Teams</h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <% if (teams && teams.length > 0) { %>
                                        <% teams.slice(0, 2).forEach(team => { %>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <strong><%= team.name %></strong> (<%= team.sport_type %>)
                                                    <div class="text-muted small">
                                                        Members: <%= team.members ? team.members.length : 0 %>/<%= team.max_members %>
                                                    </div>
                                                </div>
                                                <span class="badge bg-success">Active</span>
                                            </li>
                                        <% }) %>
                                    <% } else { %>
                                        <li class="list-group-item text-center">
                                            You haven't joined any teams yet
                                        </li>
                                    <% } %>
                                </ul>
                                <div class="mt-3">
                                    <a href="/player/my-teams" class="btn btn-outline-success">View Teams</a>
                                    <a href="/player/browse-teams" class="btn btn-outline-info ms-2">Join New Team</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Event Schedule</h5>
                                <button type="button" class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#calendarModal">
                                    <i class="fas fa-calendar-alt me-1"></i>Calendar View
                                </button>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>Event</th>
                                                <th>Date</th>
                                                <th>Team</th>
                                                <th>Location</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (events && events.length > 0) { %>
                                                <% events.forEach(event => { %>
                                                    <tr>
                                                        <td><%= event.name %></td>
                                                        <td><%= new Date(event.event_date).toLocaleDateString() %></td>
                                                        <td><%= event.team_name %></td>
                                                        <td><%= event.location %></td>
                                                        <td>
                                                            <a href="/player/event/<%= event.id %>" class="btn btn-sm btn-outline-primary">Details</a>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="5" class="text-center">No events scheduled</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Calendar Modal -->
<div class="modal fade" id="calendarModal" tabindex="-1" aria-labelledby="calendarModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="calendarModalLabel">
                    <i class="fas fa-calendar-alt me-2"></i>Event Calendar
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <button type="button" class="btn btn-outline-primary btn-sm" id="prevMonth">
                        <i class="fas fa-chevron-left"></i> Previous
                    </button>
                    <h4 id="currentMonth" class="mb-0"></h4>
                    <button type="button" class="btn btn-outline-primary btn-sm" id="nextMonth">
                        Next <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
                <div id="calendar" class="calendar-container">
                    <!-- Calendar will be populated by JavaScript -->
                </div>
                <div class="mt-3">
                    <div class="d-flex align-items-center">
                        <span class="calendar-legend me-3">
                            <span class="calendar-event-indicator bg-primary"></span>
                            <small>Your Events</small>
                        </span>
                        <span class="calendar-legend">
                            <span class="calendar-event-indicator bg-success"></span>
                            <small>Team Events</small>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.calendar-container {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 15px;
}

.calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 1px;
    background: #dee2e6;
    border-radius: 4px;
    overflow: hidden;
}

.calendar-header {
    background: #495057;
    color: white;
    padding: 10px;
    text-align: center;
    font-weight: bold;
    font-size: 0.9em;
}

.calendar-day {
    background: white;
    padding: 8px 4px;
    min-height: 60px;
    border: none;
    position: relative;
    cursor: pointer;
    transition: background-color 0.2s;
}

.calendar-day:hover {
    background-color: #e9ecef;
}

.calendar-day.other-month {
    background: #f8f9fa;
    color: #6c757d;
}

.calendar-day.today {
    background-color: #cfe2ff;
    font-weight: bold;
}

.calendar-day.has-events {
    background-color: #d1ecf1;
}

.calendar-day-number {
    font-size: 0.9em;
    margin-bottom: 2px;
}

.calendar-event {
    background: #007bff;
    color: white;
    font-size: 0.7em;
    padding: 1px 4px;
    border-radius: 2px;
    margin-bottom: 1px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.calendar-event.team-event {
    background: #28a745;
}

.calendar-legend {
    display: flex;
    align-items: center;
}

.calendar-event-indicator {
    width: 12px;
    height: 12px;
    border-radius: 2px;
    margin-right: 5px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let currentDate = new Date();
    let playerEvents = <%- JSON.stringify(events || []) %>;
    
    // Convert date strings to Date objects
    playerEvents = playerEvents.map(event => ({
        ...event,
        event_date: new Date(event.event_date)
    }));
    
    function renderCalendar(date) {
        const year = date.getFullYear();
        const month = date.getMonth();
        
        // Update month header
        const monthNames = [
            'January', 'February', 'March', 'April', 'May', 'June',
            'July', 'August', 'September', 'October', 'November', 'December'
        ];
        document.getElementById('currentMonth').textContent = `${monthNames[month]} ${year}`;
        
        // Get first day of month and number of days
        const firstDay = new Date(year, month, 1);
        const lastDay = new Date(year, month + 1, 0);
        const firstDayOfWeek = firstDay.getDay();
        const daysInMonth = lastDay.getDate();
        
        // Create calendar grid
        let calendarHTML = '<div class="calendar-grid">';
        
        // Add day headers
        const dayHeaders = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
        dayHeaders.forEach(day => {
            calendarHTML += `<div class="calendar-header">${day}</div>`;
        });
        
        // Add empty cells for days before month starts
        for (let i = 0; i < firstDayOfWeek; i++) {
            const prevMonth = new Date(year, month, 0);
            const dayNumber = prevMonth.getDate() - firstDayOfWeek + i + 1;
            calendarHTML += `<div class="calendar-day other-month">
                <div class="calendar-day-number">${dayNumber}</div>
            </div>`;
        }
        
        // Add days of current month
        const today = new Date();
        for (let day = 1; day <= daysInMonth; day++) {
            const currentDay = new Date(year, month, day);
            const isToday = currentDay.toDateString() === today.toDateString();
            
            // Find events for this day
            const dayEvents = playerEvents.filter(event => {
                const eventDate = new Date(event.event_date);
                return eventDate.getDate() === day && 
                       eventDate.getMonth() === month && 
                       eventDate.getFullYear() === year;
            });
            
            let dayClass = 'calendar-day';
            if (isToday) dayClass += ' today';
            if (dayEvents.length > 0) dayClass += ' has-events';
            
            calendarHTML += `<div class="${dayClass}">
                <div class="calendar-day-number">${day}</div>`;
            
            // Add events for this day
            dayEvents.slice(0, 2).forEach(event => { // Show max 2 events per day
                const eventClass = event.team_name ? 'calendar-event team-event' : 'calendar-event';
                calendarHTML += `<div class="${eventClass}" title="${event.name} - ${event.team_name || 'Individual'}">${event.name}</div>`;
            });
            
            if (dayEvents.length > 2) {
                calendarHTML += `<div class="calendar-event" style="background: #6c757d;">+${dayEvents.length - 2} more</div>`;
            }
            
            calendarHTML += '</div>';
        }
        
        // Add empty cells for days after month ends
        const totalCells = Math.ceil((firstDayOfWeek + daysInMonth) / 7) * 7;
        const remainingCells = totalCells - (firstDayOfWeek + daysInMonth);
        for (let day = 1; day <= remainingCells; day++) {
            calendarHTML += `<div class="calendar-day other-month">
                <div class="calendar-day-number">${day}</div>
            </div>`;
        }
        
        calendarHTML += '</div>';
        document.getElementById('calendar').innerHTML = calendarHTML;
    }
    
    // Navigation event listeners
    document.getElementById('prevMonth').addEventListener('click', function() {
        currentDate.setMonth(currentDate.getMonth() - 1);
        renderCalendar(currentDate);
    });
    
    document.getElementById('nextMonth').addEventListener('click', function() {
        currentDate.setMonth(currentDate.getMonth() + 1);
        renderCalendar(currentDate);
    });
    
    // Initialize calendar when modal is shown
    document.getElementById('calendarModal').addEventListener('shown.bs.modal', function() {
        renderCalendar(currentDate);
    });
});
</script> 