<!-- Admin Profile Management -->
<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-12 align-self-center">
            <h4 class="text-themecolor">Admin Profile</h4>
        </div>
    </div>
    
    <div class="row">
        <!-- Profile Information -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="https://via.placeholder.com/150" class="rounded-circle" width="150" height="150" alt="Admin profile image" id="profileImageDisplay">
                        <h4 class="mt-3 mb-1">Admin User</h4>
                        <p class="text-muted">System Administrator</p>
                    </div>
                    
                    <div class="list-group">
                        <a href="javascript:void(0)" class="list-group-item active">
                            <i class="bi bi-person me-2"></i> Profile Information
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Contact Information -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Contact Information</h5>
                    <div class="mb-3">
                        <label class="text-muted">Email</label>
                        <h6>admin@example.com</h6>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted">Phone</label>
                        <h6>+91 98765 43210</h6>
                    </div>
                    <div>
                        <label class="text-muted">Address</label>
                        <h6>123 Sports Complex, MG Road, Bangalore 560001, India</h6>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Edit Profile Form -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Edit Profile</h5>
                    <form id="profileForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="firstName" value="Admin" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="lastName" value="User" required>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" value="admin@example.com" required>
                            <div class="invalid-feedback" id="emailError">
                                Please enter a valid email address (must contain @ and .com)
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="phone" value="+91 98765 43210" required>
                                <div class="invalid-feedback" id="phoneError">
                                    Please enter a valid phone number with 10 digits
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="role" class="form-label">Role</label>
                                <input type="text" class="form-control" id="role" value="System Administrator" disabled>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <textarea class="form-control" id="address" rows="3" required>123 Sports Complex, MG Road, Bangalore 560001, India</textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="profileImage" class="form-label">Profile Image</label>
                            <input type="file" class="form-control" id="profileImage" accept="image/*">
                        </div>
                        
                        <div class="mb-3">
                            <label for="bio" class="form-label">Bio/About</label>
                            <textarea class="form-control" id="bio" rows="4">System administrator responsible for managing the sports administration platform, user accounts, and overall system maintenance.</textarea>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>
            
            <!-- Change Password -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Change Password</h5>
                    <form id="passwordForm">
                        <div class="mb-3">
                            <label for="currentPassword" class="form-label">Current Password</label>
                            <input type="password" class="form-control" id="currentPassword" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="newPassword" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="confirmPassword" required>
                            <div class="invalid-feedback" id="passwordError">
                                Passwords do not match
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Update Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Elements
        const profileForm = document.getElementById('profileForm');
        const emailInput = document.getElementById('email');
        const phoneInput = document.getElementById('phone');
        const profileImageInput = document.getElementById('profileImage');
        const profileImageDisplay = document.getElementById('profileImageDisplay');
        const firstNameInput = document.getElementById('firstName');
        const lastNameInput = document.getElementById('lastName');
        const addressInput = document.getElementById('address');
        
        // Contact info display elements
        const contactEmail = document.querySelector('.card:nth-child(2) .mb-3:nth-child(2) h6');
        const contactPhone = document.querySelector('.card:nth-child(2) .mb-3:nth-child(3) h6');
        const contactAddress = document.querySelector('.card:nth-child(2) div:nth-child(4) h6');
        
        // Input validation delegated to the central DOM validator (form-validation.js)
        
        // Handle profile image change
        if (profileImageInput) {
            profileImageInput.addEventListener('change', function(e) {
                if (this.files && this.files[0]) {
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        // Update both the profile image display and the header image if it exists
                        profileImageDisplay.src = e.target.result;
                        
                        // Also update the name in the profile section
                        const fullName = firstNameInput.value + ' ' + lastNameInput.value;
                        const profileName = document.querySelector('.text-center.mb-4 h4');
                        if (profileName) {
                            profileName.textContent = fullName;
                        }
                    };
                    
                    reader.readAsDataURL(this.files[0]);
                }
            });
        }
        
        // Profile form submission
        if (profileForm) {
            profileForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Delegate validation to central validator; request a standard submit which will be intercepted if invalid
                this.requestSubmit();
                const profileName = document.querySelector('.text-center.mb-4 h4');
                if (profileName) {
                    profileName.textContent = fullName;
                }
                
                // Show success message
                alert('Profile updated successfully!');
            });
        }
        
        // Password form submission
        const passwordForm = document.getElementById('passwordForm');
        if (passwordForm) {
            passwordForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const newPassword = document.getElementById('newPassword').value;
                const confirmPassword = document.getElementById('confirmPassword').value;
                const confirmPasswordInput = document.getElementById('confirmPassword');
                
                // Reset validation
                confirmPasswordInput.classList.remove('is-invalid');
                
                if (newPassword !== confirmPassword) {
                    confirmPasswordInput.classList.add('is-invalid');
                    document.getElementById('passwordError').style.display = 'block';
                    return;
                }
                
                alert('Password changed successfully!');
                passwordForm.reset();
            });
        }
    });
</script> 