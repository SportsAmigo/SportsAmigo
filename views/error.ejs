<!-- Error page template -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><%= typeof title !== 'undefined' ? title : 'Error' %></h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
                    </div>
                    
                    <p class="lead text-center">
                        <%= typeof message !== 'undefined' ? message : 'An unexpected error occurred.' %>
                    </p>
                    
                    <div class="d-grid gap-2 col-6 mx-auto mt-4">
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-fill"></i> Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 