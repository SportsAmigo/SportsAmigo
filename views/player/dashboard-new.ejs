<!-- Dashboard Content -->
<div class="container-fluid">
    <!-- Dashboard Stats Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card dashboard-stat-card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">My Events</h6>
                            <h2 class="mb-0"><%= events ? events.length : 0 %></h2>
                        </div>
                        <div class="card-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card dashboard-stat-card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">My Teams</h6>
                            <h2 class="mb-0"><%= teams ? teams.length : 0 %></h2>
                        </div>
                        <div class="card-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card dashboard-stat-card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Achievements</h6>
                            <h2 class="mb-0">0</h2>
                        </div>
                        <div class="card-icon">
                            <i class="fas fa-trophy"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card dashboard-stat-card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Performance</h6>
                            <h2 class="mb-0">85%</h2>
                        </div>
                        <div class="card-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Welcome Message -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Welcome back, <%= user.first_name || user.email %>!</h4>
                    <% if (events && events.length > 0) { 
                        const nextEvent = events[0]; // First event (should be sorted by date)
                    %>
                        <p class="card-text">Your next event is <strong><%= nextEvent.name %></strong> on <strong><%= new Date(nextEvent.event_date).toLocaleDateString() %></strong>. Make sure to check your team's schedule and be prepared!</p>
                        <a href="/player/event/<%= nextEvent.id %>" class="btn btn-primary">View Event Details</a>
                    <% } else { %>
                        <p class="card-text">You don't have any upcoming events. Browse available events or join a team to participate!</p>
                        <a href="/player/browse-events" class="btn btn-primary">Browse Events</a>
                        <a href="/player/browse-teams" class="btn btn-outline-success ms-2">Join a Team</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Dashboard Cards Row -->
    <div class="row">
        <!-- Upcoming Events Card -->
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Upcoming Events</h5>
                </div>
                <div class="card-body">
                    <% if (events && events.length > 0) { %>
                        <% events.slice(0, 3).forEach(event => { %>
                            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                <div>
                                    <h6 class="mb-1"><%= event.name %></h6>
                                    <small class="text-muted"><%= new Date(event.event_date).toLocaleDateString() %></small>
                                </div>
                                <div>
                                    <span class="badge bg-info me-1"><%= event.team_name %></span>
                                </div>
                            </div>
                        <% }) %>
                        <div class="mt-3">
                            <a href="/player/my-events" class="btn btn-outline-primary btn-sm">See All Events</a>
                        </div>
                    <% } else { %>
                        <div class="text-center py-3">
                            <p class="text-muted">No upcoming events</p>
                            <a href="/player/browse-events" class="btn btn-primary btn-sm">Browse Events</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <!-- My Teams Card -->
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>My Teams</h5>
                </div>
                <div class="card-body">
                    <% if (teams && teams.length > 0) { %>
                        <% teams.slice(0, 2).forEach(team => { %>
                            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                <div>
                                    <h6 class="mb-1"><%= team.name %></h6>
                                    <small class="text-muted"><%= team.sport_type %> â€¢ <%= team.members ? team.members.length : 0 %>/<%= team.max_members %> members</small>
                                </div>
                                <span class="badge bg-success">Active</span>
                            </div>
                        <% }) %>
                        <div class="mt-3">
                            <a href="/player/my-teams" class="btn btn-outline-success btn-sm">View Teams</a>
                            <a href="/player/browse-teams" class="btn btn-outline-info btn-sm ms-2">Join New Team</a>
                        </div>
                    <% } else { %>
                        <div class="text-center py-3">
                            <p class="text-muted">You haven't joined any teams yet</p>
                            <a href="/player/browse-teams" class="btn btn-success btn-sm">Join a Team</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Event Schedule -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-week me-2"></i>Event Schedule</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Event</th>
                                    <th>Date</th>
                                    <th>Team</th>
                                    <th>Location</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (events && events.length > 0) { %>
                                    <% events.forEach(event => { %>
                                        <tr>
                                            <td><%= event.name %></td>
                                            <td><%= new Date(event.event_date).toLocaleDateString() %></td>
                                            <td><%= event.team_name %></td>
                                            <td><%= event.location %></td>
                                            <td>
                                                <a href="/player/event/<%= event.id %>" class="btn btn-sm btn-outline-primary">Details</a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center py-4">
                                            <i class="fas fa-calendar-times fa-2x text-muted mb-2"></i>
                                            <p class="text-muted mb-0">No events scheduled</p>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>