<!-- Registration Section -->
<section class="login-section">
    <div class="container">
        <div class="login-content">
            <!-- Cart Summary Sidebar -->
            <div class="cart-summary-sidebar">
                <h2>ðŸ›’ Your Order</h2>
                
                <% if (cart && cart.items && cart.items.length > 0) { %>
                    <div class="cart-items">
                        <% cart.items.forEach(item => { %>
                            <div class="cart-item-mini">
                                <img src="<%= item.imageUrl || '/images/shop/default-product.jpg' %>" 
                                     alt="<%= item.name %>" class="item-image-mini" />
                                <div class="item-details-mini">
                                    <h4><%= item.name %></h4>
                                    <p>Qty: <%= item.quantity %> Ã— $<%= item.price.toFixed(2) %></p>
                                    <p class="item-total">$<%= (item.price * item.quantity).toFixed(2) %></p>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    
                    <div class="order-total">
                        <div class="total-row">
                            <span>Items (<%= cart.itemCount %>):</span>
                            <span>$<%= cart.totalAmount.toFixed(2) %></span>
                        </div>
                        <div class="total-row">
                            <span>Shipping:</span>
                            <span class="free-shipping">FREE</span>
                        </div>
                        <div class="total-row grand-total">
                            <strong>
                                <span>Total:</span>
                                <span>$<%= cart.totalAmount.toFixed(2) %></span>
                            </strong>
                        </div>
                    </div>
                <% } else { %>
                    <div class="empty-cart-mini">
                        <p>Your cart is empty</p>
                        <a href="/shop" class="continue-shopping-btn">Continue Shopping</a>
                    </div>
                <% } %>
                
                <!-- Welcome Bonus -->
                <div class="welcome-bonus">
                    <h3>ðŸŽ‰ Welcome Bonus</h3>
                    <p>Create an account and get <strong>$500</strong> credited to your wallet instantly!</p>
                </div>
            </div>

            <!-- Registration Form -->
            <div class="login-form-container">
                <div class="login-form">
                    <h2>ðŸš€ Create Your Account</h2>
                    <p class="login-subtitle">Join thousands of sports enthusiasts on SportsAmigo</p>
                    
                    <% if (error) { %>
                        <div class="error-message">
                            <i class="fa fa-exclamation-circle"></i>
                            <%= error %>
                        </div>
                    <% } %>
                    
                    <% if (success) { %>
                        <div class="success-message">
                            <i class="fa fa-check-circle"></i>
                            <%= success %>
                        </div>
                    <% } %>
                    
                    <form method="POST" action="/shop-login/register" id="shopRegisterForm">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="firstName">First Name</label>
                                <div class="input-group">
                                    <i class="fa fa-user input-icon"></i>
                                    <input type="text" id="firstName" name="firstName" 
                                           placeholder="Enter your first name" required />
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label for="lastName">Last Name</label>
                                <div class="input-group">
                                    <i class="fa fa-user input-icon"></i>
                                    <input type="text" id="lastName" name="lastName" 
                                           placeholder="Enter your last name" required />
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <div class="input-group">
                                <i class="fa fa-envelope input-icon"></i>
                                <input type="email" id="email" name="email" 
                                       placeholder="Enter your email" required />
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="password">Password</label>
                                <div class="input-group">
                                    <i class="fa fa-lock input-icon"></i>
                                    <input type="password" id="password" name="password" 
                                           placeholder="Create a password" required minlength="6" />
                                    <button type="button" class="toggle-password" onclick="togglePassword('password')">
                                        <i class="fa fa-eye" id="toggleIcon1"></i>
                                    </button>
                                </div>
                                <small class="field-hint">Minimum 6 characters</small>
                            </div>
                            
                            <div class="form-group">
                                <label for="confirmPassword">Confirm Password</label>
                                <div class="input-group">
                                    <i class="fa fa-lock input-icon"></i>
                                    <input type="password" id="confirmPassword" name="confirmPassword" 
                                           placeholder="Confirm your password" required />
                                    <button type="button" class="toggle-password" onclick="togglePassword('confirmPassword')">
                                        <i class="fa fa-eye" id="toggleIcon2"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-actions">
                            <button type="submit" class="login-btn register-btn">
                                <i class="fa fa-user-plus"></i>
                                Create Account & Get $500 Bonus
                            </button>
                        </div>
                    </form>
                    
                    <div class="login-options">
                        <div class="divider">
                            <span>Already have an account?</span>
                        </div>
                        
                        <a href="/shop-login" class="register-link login-link-alt">
                            <i class="fa fa-sign-in"></i>
                            Sign In to Your Account
                        </a>
                        
                        <div class="back-options">
                            <a href="/cart" class="back-to-cart">
                                <i class="fa fa-arrow-left"></i>
                                Back to Cart
                            </a>
                            <a href="/shop" class="continue-shopping">
                                <i class="fa fa-shopping-bag"></i>
                                Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
                
                <!-- Security Notice -->
                <div class="security-notice">
                    <h3>ðŸ”’ Your Data is Safe</h3>
                    <p>We use industry-standard encryption to protect your personal information. Your privacy is our priority, and we never share your data with third parties.</p>
                </div>
            </div>
        </div>
    </div>
</section>

