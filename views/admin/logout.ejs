<!-- Logout Page -->
<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-12 align-self-center">
            <h4 class="text-themecolor">Logout</h4>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body text-center">
                    <img src="https://via.placeholder.com/150" class="mb-4 rounded-circle" width="100" height="100" alt="Admin profile image">
                    <h4>Are you sure you want to logout?</h4>
                    <p class="text-muted mb-4">You will be redirected to the login page after logout.</p>
                    
                    <div class="d-flex justify-content-center">
                        <a href="/admin/dashboard" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-arrow-left me-1"></i> Cancel
                        </a>
                        <button id="logoutBtn" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right me-1"></i> Yes, Logout
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const logoutBtn = document.getElementById('logoutBtn');
        if (logoutBtn) {
            logoutBtn.addEventListener('click', function() {
                // Perform logout action
                fetch('/api/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'same-origin'
                })
                .then(response => {
                    if (response.ok) {
                        // Redirect to login page after successful logout
                        window.location.href = '/login';
                    } else {
                        console.error('Logout failed');
                    }
                })
                .catch(error => {
                    console.error('Error during logout:', error);
                });
            });
        }
    });
</script> 