<!-- Dashboard Content -->
<div class="container-fluid">
    <!-- Dashboard Stats Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card dashboard-stat-card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">My Teams</h6>
                            <h2 class="mb-0"><%= teams ? teams.length : 0 %></h2>
                        </div>
                        <div class="card-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card dashboard-stat-card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Team Events</h6>
                            <h2 class="mb-0"><%= events ? events.length : 0 %></h2>
                        </div>
                        <div class="card-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card dashboard-stat-card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Total Players</h6>
                            <h2 class="mb-0"><%= totalPlayers || 0 %></h2>
                        </div>
                        <div class="card-icon">
                            <i class="fas fa-user-friends"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card dashboard-stat-card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Wins</h6>
                            <h2 class="mb-0"><%= wins || 0 %></h2>
                        </div>
                        <div class="card-icon">
                            <i class="fas fa-trophy"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Welcome Message -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Welcome back, <%= user.first_name || user.email %>!</h4>
                    <% if (teams && teams.length > 0) { %>
                        <p class="card-text">You're currently managing <strong><%= teams.length %></strong> <%= teams.length === 1 ? 'team' : 'teams' %>. Keep up the great work!</p>
                        <a href="/manager/my-teams" class="btn btn-primary">Manage Teams</a>
                    <% } else { %>
                        <p class="card-text">You don't have any teams yet. Create your first team to get started!</p>
                        <a href="/manager/create-team" class="btn btn-primary">Create Team</a>
                        <a href="/manager/browse-events" class="btn btn-outline-success ms-2">Browse Events</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Dashboard Cards Row -->
    <div class="row">
        <!-- My Teams Card -->
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>My Teams</h5>
                </div>
                <div class="card-body">
                    <% if (teams && teams.length > 0) { %>
                        <% teams.slice(0, 3).forEach(team => { %>
                            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                <div>
                                    <h6 class="mb-1"><%= team.name %></h6>
                                    <small class="text-muted"><%= team.sport_type %> • <%= team.members ? team.members.length : 0 %>/<%= team.max_members %> players</small>
                                </div>
                                <span class="badge bg-success">Active</span>
                            </div>
                        <% }) %>
                        <div class="mt-3">
                            <a href="/manager/my-teams" class="btn btn-outline-primary btn-sm">View All Teams</a>
                            <a href="/manager/create-team" class="btn btn-primary btn-sm ms-2">Create New Team</a>
                        </div>
                    <% } else { %>
                        <div class="text-center py-3">
                            <p class="text-muted">No teams created yet</p>
                            <a href="/manager/create-team" class="btn btn-primary btn-sm">Create Your First Team</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <!-- Upcoming Events Card -->
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Upcoming Events</h5>
                </div>
                <div class="card-body">
                    <% if (events && events.length > 0) { %>
                        <% events.slice(0, 3).forEach(event => { %>
                            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                <div>
                                    <h6 class="mb-1"><%= event.name %></h6>
                                    <small class="text-muted"><%= new Date(event.event_date).toLocaleDateString() %> • <%= event.team_name %></small>
                                </div>
                                <span class="badge bg-info">Registered</span>
                            </div>
                        <% }) %>
                        <div class="mt-3">
                            <a href="/manager/my-events" class="btn btn-outline-success btn-sm">View All Events</a>
                        </div>
                    <% } else { %>
                        <div class="text-center py-3">
                            <p class="text-muted">No upcoming events</p>
                            <a href="/manager/browse-events" class="btn btn-success btn-sm">Browse Events</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Team Management</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-grid">
                                <a href="/manager/create-team" class="btn btn-primary">
                                    <i class="fas fa-plus-circle me-2"></i>Create New Team
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-grid">
                                <a href="/manager/browse-events" class="btn btn-success">
                                    <i class="fas fa-search me-2"></i>Browse Events
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-grid">
                                <a href="/manager/my-teams" class="btn btn-info">
                                    <i class="fas fa-users me-2"></i>Manage Teams
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-grid">
                                <a href="/manager/profile" class="btn btn-warning">
                                    <i class="fas fa-user-edit me-2"></i>Edit Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Team Performance</h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <canvas id="performanceChart" width="200" height="200"></canvas>
                        <p class="mt-2 text-muted">Overall team performance this season</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Simple performance chart
document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('performanceChart');
    if (ctx) {
        // You can implement Chart.js here if needed
        // For now, just a placeholder
        ctx.getContext('2d').fillText('Performance Data', 50, 100);
    }
});
</script>