<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'SportsAmigo' %></title>
    <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'South African Sports Association - Join the largest sports community in South Africa' %>">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap JS with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" defer></script>
    <% if (typeof additionalStyles !== 'undefined') { %>
        <%- additionalStyles %>
    <% } %>
</head>
<body>
    <% if (typeof headerType !== 'undefined') { %>
        <% if (headerType === 'football') { %>
            <section class="sub-header football-header">
        <% } else if (headerType === 'cricket') { %>
            <section class="sub-header cricket-header">
        <% } else if (headerType === 'basketball') { %>
            <section class="sub-header basketball-header">
        <% } else if (headerType === 'events') { %>
            <section class="sub-header events-header">
        <% } else { %>
            <section class="sub-header">
        <% } %>
    <% } %> 