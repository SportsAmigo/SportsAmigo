<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Event Results: <%= event.name %></h3>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Event Information</h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>Date:</strong>
                                        <span><%= event.date %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>Location:</strong>
                                        <span><%= event.location %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>Sport:</strong>
                                        <span><%= event.sport %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>Team:</strong>
                                        <span><%= event.team %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>Overall Result:</strong>
                                        <span class="badge bg-<%= event.result === 'Won' ? 'success' : event.result === 'Lost' ? 'danger' : 'warning' %>">
                                            <%= event.result %>
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Team Performance</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="resultsChart" height="200"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-12">
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Match Results</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Round</th>
                                                <th>Opponent</th>
                                                <th>Score</th>
                                                <th>Result</th>
                                                <th>Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (event.matches && event.matches.length > 0) { %>
                                                <% event.matches.forEach(match => { %>
                                                    <tr>
                                                        <td><%= match.round %></td>
                                                        <td><%= match.opponent %></td>
                                                        <td><%= match.score %></td>
                                                        <td>
                                                            <span class="badge bg-<%= match.result === 'Win' ? 'success' : match.result === 'Loss' ? 'danger' : 'warning' %>">
                                                                <%= match.result %>
                                                            </span>
                                                        </td>
                                                        <td>January 2023</td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="5" class="text-center">No match data available</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-12">
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Player Highlights</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="card mb-3">
                                            <div class="card-body text-center">
                                                <h5 class="card-title">Top Scorer</h5>
                                                <img src="https://via.placeholder.com/100" class="rounded-circle mb-2" alt="Player">
                                                <h6>John Smith</h6>
                                                <p class="text-muted">48 points</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card mb-3">
                                            <div class="card-body text-center">
                                                <h5 class="card-title">Most Assists</h5>
                                                <img src="https://via.placeholder.com/100" class="rounded-circle mb-2" alt="Player">
                                                <h6>Michael Johnson</h6>
                                                <p class="text-muted">22 assists</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card mb-3">
                                            <div class="card-body text-center">
                                                <h5 class="card-title">Most Rebounds</h5>
                                                <img src="https://via.placeholder.com/100" class="rounded-circle mb-2" alt="Player">
                                                <h6>David Miller</h6>
                                                <p class="text-muted">36 rebounds</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between">
                    <a href="/manager/my-events" class="btn btn-secondary">Back to My Events</a>
                    <% if (event.result === 'Won') { %>
                        <a href="#" class="btn btn-success">Download Certificate</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Results chart
        const ctx = document.getElementById('resultsChart').getContext('2d');
        const resultsChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Wins', 'Losses', 'Draws'],
                datasets: [{
                    data: [3, 1, 0],
                    backgroundColor: [
                        'rgba(40, 167, 69, 0.7)',
                        'rgba(220, 53, 69, 0.7)',
                        'rgba(255, 193, 7, 0.7)'
                    ],
                    borderColor: [
                        'rgba(40, 167, 69, 1)',
                        'rgba(220, 53, 69, 1)',
                        'rgba(255, 193, 7, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                    }
                }
            }
        });
        
        // Button functionality
        const backBtn = document.querySelector('.btn-secondary');
        backBtn.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Show loading state
            this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Loading...';
            this.disabled = true;
            
            // Redirect after a short delay
            setTimeout(() => {
                window.location.href = this.getAttribute('href');
            }, 500);
        });
        
        const downloadBtn = document.querySelector('.btn-success');
        if (downloadBtn) {
            downloadBtn.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Show loading state
                this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Downloading...';
                this.disabled = true;
                
                // Simulate download
                setTimeout(() => {
                    alert('Certificate downloaded successfully!');
                    this.innerHTML = 'Download Certificate';
                    this.disabled = false;
                }, 1500);
            });
        }
    });
</script> 