<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Player Details</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Player Information</h5>
                            </div>
                            <div class="card-body text-center">
                                <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="<%= player.name %>">
                                <h4><%= player.name %></h4>
                                <p class="badge bg-primary"><%= player.position %></p>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>Team:</strong>
                                        <span><%= player.team %></span>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Bio:</strong>
                                        <p class="text-muted mt-2"><%= player.bio %></p>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <a href="/manager/player/<%= player.id %>/edit" class="btn btn-warning">Edit Player</a>
                            <a href="/manager/my-team" class="btn btn-secondary">Back to Team</a>
                        </div>
                    </div>


                    <div class="col-md-8">
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Performance Statistics</h5>
                            </div>
                            <div class="card-body">
                               <div class="row text-center">
                                    <div class="col-md-4">
                                        <div class="card bg-light mb-3">
                                            <div class="card-body">
                                                <h3 class="card-title"><%= player.stats.points %></h3>
                                                <p class="card-text text-muted">Total Points</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card bg-light mb-3">
                                            <div class="card-body">
                                                <h3 class="card-title"><%= player.stats.assists %></h3>
                                                <p class="card-text text-muted">Assists</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card bg-light mb-3">
                                            <div class="card-body">
                                                <h3 class="card-title"><%= player.stats.rebounds %></h3>
                                                <p class="card-text text-muted">Rebounds</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card border-0 shadow-sm mt-4">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Key Stats</h5>
                                    </div>
                                    <div class="card-body">
                                        <ul class="list-group">
                                            <li class="list-group-item">Goals: 12</li>
                                            <li class="list-group-item">Assists: 8</li>
                                            <li class="list-group-item">Shots on Target: 25</li>
                                            <li class="list-group-item">Passing Accuracy: 89%</li>
                                        </ul>
                                    </div>
                                </div>


                                <div class="chart-container mt-4" style="position: relative; height:300px; width:100%">
                                    <canvas id="performanceChart"></canvas>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Recent Games</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Event</th>
                                                <th>Opponent</th>
                                                <th>Points</th>
                                                <th>Result</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>May 10, 2023</td>
                                                <td>City Tournament</td>
                                                <td>Eagles FC</td>
                                                <td>18</td>
                                                <td><span class="badge bg-success">Win</span></td>
                                            </tr>
                                            <tr>
                                                <td>May 5, 2023</td>
                                                <td>Regional League</td>
                                                <td>Thunder United</td>
                                                <td>12</td>
                                                <td><span class="badge bg-danger">Loss</span></td>
                                            </tr>
                                            <tr>
                                                <td>April 28, 2023</td>
                                                <td>Regional League</td>
                                                <td>Royal Tigers</td>
                                                <td>22</td>
                                                <td><span class="badge bg-success">Win</span></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('performanceChart').getContext('2d');
        const performanceChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Game 1', 'Game 2', 'Game 3', 'Game 4', 'Game 5', 'Game 6'],
                datasets: [{
                    label: 'Points',
                    data: [12, 18, 15, 22, 14, 24],
                    borderColor: 'rgba(54, 162, 235, 1)',
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
        const editBtn = document.querySelector('.btn-warning');
        editBtn.addEventListener('click', function(e) {
            e.preventDefault();

            this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Loading...';
            this.disabled = true;

            setTimeout(() => {
                window.location.href = this.getAttribute('href');
            }, 500);
        });
        const backBtn = document.querySelector('.btn-secondary');
        backBtn.addEventListener('click', function(e) {
            e.preventDefault();

            this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Loading...';
            this.disabled = true;

            setTimeout(() => {
                window.location.href = this.getAttribute('href');
            }, 500);
        });
    });
</script>