<div class="container-fluid">
<div class="row">
    <div class="col-md-12">
        <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">My Profile</h3>
            </div>
            <div class="card-body">
                    <% if (locals.message) { %>
                        <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
                            <%= message.text %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>
                    
                    <div class="row">
                        <!-- Profile Summary -->
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm mb-4">
                            <div class="card-body text-center">
                                    <div class="position-relative mb-4 mx-auto" style="width: 150px; height: 150px;">
                                        <img src="<%= user.profile_image || '/images/default-avatar.png' %>" 
                                            class="rounded-circle img-thumbnail" alt="Profile Picture" 
                                            style="width: 150px; height: 150px; object-fit: cover;">
                                        <button type="button" class="btn btn-sm btn-primary position-absolute bottom-0 end-0"
                                            data-bs-toggle="modal" data-bs-target="#changePhotoModal">
                                            <i class="fas fa-camera"></i>
                                        </button>
                                    </div>
                                    
                                    <h4 class="mt-2 mb-0"><%= user.first_name || '' %> <%= user.last_name || '' %></h4>
                                    <p class="text-muted">Event Organizer</p>
                                    <p class="mb-1">
                                        <i class="fas fa-envelope me-2"></i><%= user.email %>
                                    </p>
                                    <% if (user.phone) { %>
                                        <p class="mb-1">
                                            <i class="fas fa-phone me-2"></i><%= user.phone %>
                                        </p>
                                        <% } %>
                                        
                                    <div class="d-grid mt-4">
                                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                                            <i class="fas fa-key me-2"></i>Change Password
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Account Summary -->
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Account Summary</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-3">
                                        <span>Account Status:</span>
                                        <span class="badge bg-success">Active</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-3">
                                        <span>Member Since:</span>
                                        <span><%= new Date(user.created_at || Date.now()).toLocaleDateString() %></span>
                                                </div>
                                    <div class="d-flex justify-content-between mb-3">
                                        <span>Total Events:</span>
                                        <span><%= user.events_count || 0 %></span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span>Upcoming Events:</span>
                                        <span><%= user.upcoming_events_count || 0 %></span>
                                    </div>
                                    </div>
                                </div>
                            </div>

                        <!-- Profile Information -->
                        <div class="col-md-8">
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">Personal Information</h5>
                                    <button type="button" class="btn btn-sm btn-primary" id="editProfileBtn">
                                        <i class="fas fa-edit me-2"></i>Edit Profile
                                    </button>
                                    </div>
                                    <div class="card-body">
                                    <form id="profileForm" data-validate action="/organizer/profile/update" method="POST" class="needs-validation" novalidate>
                                        <div class="row g-3">
                                                <div class="col-md-6">
                                                <label for="first_name" class="form-label">First Name</label>
                                                <input type="text" class="form-control" id="first_name" name="first_name" 
                                                    value="<%= user.first_name || '' %>" required disabled>
                                                <div class="invalid-feedback">
                                                    First name is required.
                                                </div>
                                                </div>
                                                <div class="col-md-6">
                                                <label for="last_name" class="form-label">Last Name</label>
                                                <input type="text" class="form-control" id="last_name" name="last_name" 
                                                    value="<%= user.last_name || '' %>" required disabled>
                                                <div class="invalid-feedback">
                                                    Last name is required.
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="email">Email Address</label>
                                                <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" readonly disabled>
                                                <small class="form-text text-muted">Your email address cannot be changed as it is used for account identification.</small>
                                            </div>
                                                <div class="col-md-6">
                                                <label for="phone" class="form-label">Phone Number</label>
                                                <input type="tel" class="form-control" id="phone" name="phone" 
                                                    value="<%= user.phone || '' %>" disabled>
                                                </div>
                                            <div class="col-md-12">
                                                <label for="organization" class="form-label">Organization</label>
                                                <input type="text" class="form-control" id="organization" name="organization" 
                                                    value="<%= (user.profile && user.profile.organization_name) || user.organization_name || user.organization || '' %>" disabled>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="age" class="form-label">Age</label>
                                                <input type="number" class="form-control" id="age" name="age" 
                                                    value="<%= (user.profile && user.profile.age) || user.age || '' %>" disabled>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="address" class="form-label">Address</label>
                                                <input type="text" class="form-control" id="address" name="address" 
                                                    value="<%= (user.profile && user.profile.address) || user.address || '' %>" disabled>
                                            </div>
                                            <div class="col-md-12">
                                                <label for="bio" class="form-label">Bio</label>
                                                <textarea class="form-control" id="bio" name="bio" rows="3" disabled><%= user.bio || '' %></textarea>
                                            </div>
                                            <div class="col-12 text-end mt-4" id="profileFormButtons" style="display: none;">
                                                <button type="button" class="btn btn-secondary me-2" id="cancelEditBtn">Cancel</button>
                                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                            </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changePasswordModalLabel">Change Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form data-validate action="/organizer/profile/change-password" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="current_password" class="form-label">Current Password</label>
                        <input type="password" class="form-control" id="current_password" name="current_password" required>
                        <div class="invalid-feedback">
                            Current password is required.
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="new_password" class="form-label">New Password</label>
                        <input type="password" class="form-control" id="new_password" name="new_password" 
                            minlength="8" required>
                        <div class="invalid-feedback">
                            Password must be at least 8 characters long.
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="confirm_password" class="form-label">Confirm New Password</label>
                        <input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
                        <div class="invalid-feedback">
                            Passwords do not match.
                        </div>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Change Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Add Photo Upload Modal -->
<div class="modal fade" id="changePhotoModal" tabindex="-1" aria-labelledby="changePhotoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changePhotoModalLabel">Update Profile Picture</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/organizer/update-photo" method="POST" enctype="multipart/form-data" data-validate>
                    <div class="mb-3">
                        <label for="photo" class="form-label">Choose a new profile picture</label>
                        <input type="file" class="form-control" id="photo" name="photo" accept="image/*" required>
                        <div class="form-text">
                            Recommended size: 300x300 pixels. Maximum file size: 5MB.
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Upload Photo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Form validation
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                
                // Password confirmation handled by central DOM validator (data-validate)
                
                form.classList.add('was-validated');
            }, false);
        });
        
        // Profile edit functionality
        const editProfileBtn = document.getElementById('editProfileBtn');
        const cancelEditBtn = document.getElementById('cancelEditBtn');
        const profileFormButtons = document.getElementById('profileFormButtons');
        const formFields = document.querySelectorAll('#profileForm input:not([readonly]), #profileForm textarea');
        
        if (editProfileBtn && cancelEditBtn && profileFormButtons) {
            // Enable editing
            editProfileBtn.addEventListener('click', function() {
                formFields.forEach(field => {
                    field.disabled = false;
                });
                profileFormButtons.style.display = 'block';
                editProfileBtn.style.display = 'none';
            });
            
            // Cancel editing
            cancelEditBtn.addEventListener('click', function() {
                formFields.forEach(field => {
                    field.disabled = true;
                    field.value = field.defaultValue; // Reset to original value
                });
                profileFormButtons.style.display = 'none';
                editProfileBtn.style.display = 'inline-block';
                document.getElementById('profileForm').classList.remove('was-validated');
            });
        }
    });
</script>

</div>
</div> 