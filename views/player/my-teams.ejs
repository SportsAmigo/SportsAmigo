<!-- Player My Teams Page -->
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-0"><i class="fas fa-users me-2"></i> My Teams</h2>
                            <p class="lead mt-2 mb-0">
                                Teams you're currently a member of
                            </p>
                        </div>
                        <a href="/player/browse-teams" class="btn btn-light btn-lg">
                            <i class="fas fa-search me-2"></i> Browse Teams
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Error/Success Messages -->
    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert">
        <%= messages.error %>
    </div>
    <% } %>
    
    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert">
        <%= messages.success %>
    </div>
    <% } %>

    <!-- Teams Section -->
    <% if (teams && teams.length > 0) { %>
        <% teams.forEach(team => { %>
            <div class="row mb-5">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="mb-0"><%= team.name %> <span class="badge bg-primary ms-2"><%= team.sport %></span></h4>
                                <a href="/player/teams/leave/<%= team.id %>" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to leave this team?')">
                                    <i class="fas fa-sign-out-alt me-1"></i> Leave Team
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <p><strong>Manager:</strong> <%= team.manager_name || team.manager_email %></p>
                                    <p><strong>Members:</strong> <%= team.current_members %> of <%= team.members %></p>
                                </div>
                                <div class="col-md-6">
                                    <% 
                                        // Calculate percentage for progress bar
                                        var percentage = Math.min(100, (team.current_members / team.members) * 100);
                                    %>
                                    <div class="progress mb-3" style="height: 25px;">
                                        <div class="progress-bar bg-success" role="progressbar" 
                                            style="width: <%= percentage %>%;" 
                                            aria-valuenow="<%= team.current_members %>" 
                                            aria-valuemin="0" 
                                            aria-valuemax="<%= team.members %>">
                                            <%= team.current_members %> / <%= team.members %> Players
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Team Members Section -->
                            <h5 class="card-title border-bottom pb-2 mb-3"><i class="fas fa-users me-2"></i> Team Members</h5>
                            
                            <!-- Team members table -->
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col">Name</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Join Date</th>
                                            <th scope="col">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (team.team_members && team.team_members.length > 0) { %>
                                            <% team.team_members.forEach(member => { %>
                                                <tr>
                                                    <td>
                                                        <%= member.first_name %> <%= member.last_name %>
                                                        <% if (user.id === member.player_id) { %>
                                                            <span class="badge bg-success">You</span>
                                                        <% } %>
                                                    </td>
                                                    <td><%= member.email %></td>
                                                    <td>
                                                        <% 
                                                        try {
                                                            const joinDate = new Date(member.joined_date);
                                                            if (joinDate && !isNaN(joinDate)) {
                                                                %><%= joinDate.toLocaleDateString() %><%
                                                            } else {
                                                                %>N/A<%
                                                            }
                                                        } catch(e) { 
                                                            %>N/A<% 
                                                        } 
                                                        %>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-<%= member.status === 'active' ? 'success' : 'secondary' %>">
                                                            <%= member.status %>
                                                        </span>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="4" class="text-center text-muted">
                                                    No team members information available
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info text-center" role="alert">
                    <i class="fas fa-info-circle me-2"></i> You're not part of any teams yet. Browse teams to find one to join!
                </div>
            </div>
        </div>
    <% } %>

    <!-- No teams prompt card -->
    <% if (!teams || teams.length === 0) { %>
        <div class="row mt-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fas fa-search me-2"></i> Find a Team</h5>
                        <p class="card-text">
                            Being part of a team enhances your sports experience. You can:
                        </p>
                        <ul class="text-start list-unstyled">
                            <li><i class="fas fa-check-circle text-success me-2"></i> Participate in tournaments and events together</li>
                            <li><i class="fas fa-check-circle text-success me-2"></i> Connect with players who share your interests</li>
                            <li><i class="fas fa-check-circle text-success me-2"></i> Improve your skills through team practice</li>
                        </ul>
                        <a href="/player/browse-teams" class="btn btn-primary mt-3">
                            <i class="fas fa-search me-2"></i> Browse Available Teams
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div> 