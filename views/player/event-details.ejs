<!-- Event Details Page -->
<div class="container-fluid p-0">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0"><%= event.name || event.title %></h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row mb-3">
                                <div class="col-md-4 font-weight-bold">Date:</div>
                                <div class="col-md-8"><%= event.date || event.event_date %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4 font-weight-bold">Location:</div>
                                <div class="col-md-8"><%= event.location %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4 font-weight-bold">Sport:</div>
                                <div class="col-md-8"><%= event.sport || event.sport_type %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4 font-weight-bold">Status:</div>
                                <div class="col-md-8">
                                    <% if (event.status === 'upcoming' || event.status === 'Upcoming') { %>
                                        <span class="badge bg-primary">Upcoming</span>
                                    <% } else if (event.status === 'ongoing' || event.status === 'Ongoing') { %>
                                        <span class="badge bg-success">Ongoing</span>
                                    <% } else if (event.status === 'completed' || event.status === 'Completed') { %>
                                        <span class="badge bg-secondary">Completed</span>
                                    <% } else { %>
                                        <span class="badge bg-primary"><%= event.status %></span>
                                    <% } %>
                                </div>
                            </div>
                            <% if (event.max_teams) { %>
                            <div class="row mb-3">
                                <div class="col-md-4 font-weight-bold">Max Teams:</div>
                                <div class="col-md-8"><%= event.max_teams %></div>
                            </div>
                            <% } %>
                            <div class="row mb-3">
                                <div class="col-md-4 font-weight-bold">Organizer:</div>
                                <div class="col-md-8">
                                    <% if (event.organizer_first_name && event.organizer_last_name) { %>
                                        <%= event.organizer_first_name %> <%= event.organizer_last_name %>
                                    <% } else { %>
                                        <%= event.organizer || 'N/A' %>
                                    <% } %>
                                </div>
                            </div>
                            <% if (event.registration_deadline) { %>
                            <div class="row mb-3">
                                <div class="col-md-4 font-weight-bold">Registration Deadline:</div>
                                <div class="col-md-8"><%= event.registration_deadline %></div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5>Event Description</h5>
                            <p><%= event.description || 'No description available.' %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row">
        <div class="col-12 d-flex justify-content-between">
            <a href="/player/browse-events" class="btn btn-secondary">Back to Events</a>
        </div>
    </div>
</div> 