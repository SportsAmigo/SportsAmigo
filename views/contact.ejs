    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3307.5768782411036!2d18.424865315199842!3d-33.90356798064654!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1dcc676e2a2f6e7d%3A0x6f70041e69d3ffaa!2sCape%20Town%20Stadium!5e0!3m2!1sen!2sza!4v1623825632158!5m2!1sen!2sza" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
</section>

<!-- Contact Us -->
<section class="contact-us">
    <div class="row">
        <div class="contact-col">
            <div>
                <i class="fa fa-home"></i>
                <div>
                    <h5>Cape Town Stadium, Fritz Sonnenberg Road</h5>
                    <p>Green Point, Cape Town, 8051</p>
                </div>
            </div>
            <div>
                <i class="fa fa-phone"></i>
                <div>
                    <h5>+27 21 123 4567</h5>
                    <p>Monday to Friday, 8AM to 5PM</p>
                </div>
            </div>
            <div>
                <i class="fa fa-envelope-o"></i>
                <div>
                    <h5>info@sasports.org.za</h5>
                    <p>Email us your query anytime!</p>
                </div>
            </div>
        </div>
        <div class="contact-col">
            <form action="/contact" method="post">
                <input type="text" name="name" placeholder="Enter your name" required>
                <input type="email" name="email" placeholder="Enter email address" required>
                <input type="text" name="subject" placeholder="Enter your subject" required>
                <textarea rows="8" name="message" placeholder="Message" required></textarea>
                <button type="submit" class="hero-btn red-btn">Send Message</button>
            </form>
        </div>
    </div>
</section>

